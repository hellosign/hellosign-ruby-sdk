#!/usr/bin/env bash

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKING_DIR="/app/ruby"

docker run --rm \
  -e GEM_HOME="/.gem-cache" \
  -e BUNDLE_PATH="/.bundle-cache" \
  -v "${ROOT_DIR}:${WORKING_DIR}" \
  -v "hellosign-sdk-gem-cache:/.gem-cache" \
  -v "hellosign-sdk-bundle-cache:/.bundle-cache" \
  -w "${WORKING_DIR}" \
  ruby:3.1 "$@"
