#!/usr/bin/env bash

set -e
DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKINGDIR="/app/ruby"

docker run --rm \
  -e GEM_HOME="/.gem-cache" \
  -e BUNDLE_PATH="/.bundle-cache" \
  -v "${ROOT_DIR}:${WORKINGDIR}" \
  -v "hellosign-sdk-gem-cache:/.gem-cache" \
  -v "hellosign-sdk-bundle-cache:/.bundle-cache" \
  -w "${WORKINGDIR}" \
  ruby:3.1 "$@"
